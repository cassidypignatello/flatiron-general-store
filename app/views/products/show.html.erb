<div class="row">
  <div class="col-lg-6">
<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @product.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= number_to_currency(@product.price)%>
</p>


<p>
  <%= image_tag @product.image_url(:thumb).to_s %>
</p>

<p>
  <%= button_to'Add To Cart', line_items_path(product_id: @product, shopping_cart_id: current_user.shopping_cart.id) %>
</p>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
</div>
</div>


