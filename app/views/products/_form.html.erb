<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 well">
  

<%= form_for(@product, :multipart => true ) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div><%= f.label :title %><br>
      <div class="col-lg-12">
      <%=  f.text_field :title, :class => "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div><%= f.label :description %><br>
      <div class="col-lg-12">
      <%=  f.text_area :description, :class => "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div><%= f.label :price %><br>
      <div class="col-lg-12">
      <%=  f.number_field :price %>
      </div>
    </div>
  </div>

  <div class="form-group">  
    <div class="col-lg-12">
    <%=  f.file_field :image %>
    </div>
  </div>

  <div class="field">
    <%= f.hidden_field :seller_id, :value => @seller_id %>
  </div>

  <div class="col-lg-12">
    <%= f.submit :class => "btn btn-primary sub" %>
  </div>
  
 
<% end %>
  <div class="col-lg-12">
    <p>
  <%= button_to "Delete", product_path(@product), :method => :delete %>
    </p>
  </div>

    </div>
  </div>
</div>


















