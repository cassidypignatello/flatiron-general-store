<div class="container col-md-12 col-md-offset-3 " >

    <h1>New Product</h1>
  
      <%= form_for(@product, :multipart => true ) do |f| %>
        <% if @product.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

            <ul>
            <% @product.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>

          </div>
        <% end %>

        <div class="row">
          <div class="field col-md-8">
            <%= f.label :title %><br>
            <%= f.text_field :title, {:class => "col-md-8"} %>
          </div>
         </div>

        <div class="row">
          <div class="field field col-md-8">
            <%= f.label :description %><br>
            <%= f.text_area :description, {:class => "col-md-8"} %>
          </div>
        </div>


          <div class="field">
            <%= f.label :price %><br>
            <%= f.number_field :price %>
          </div>
          <div class="field">
            <%= f.file_field :image  %><br>
          </div>
          <div class="field">
            <%= f.hidden_field :seller_id, :value => @seller_id %><br>
          </div>
          <div class="actions">
            <%= f.submit %>
          </div>
      <% end %>
      <%= link_to 'Back', products_path %>
  </div>


















