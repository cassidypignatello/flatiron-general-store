<div class="row">
   <% @products.each do |product| %>
    <div class="col-lg-3 col-sm-6 col-md-4">
      <div class="panel panel-default bootcards-media">
        <div class="panel-heading">
          <h3><%= link_to product.title, product_path(product.id) %></h3>
        </div>
        <img src="<%= product.image_url %>" class="img-responsive"/>
        <div class="panel-body">
          <%= "#{product.description.first(100)}..." %>
        </div>
        <div class="panel-footer">
          <div class="btn-group btn-group-justified">
            <div class="btn-group">
              <% #binding.pry %>
              <%= button_to "Add to Cart", add_to_cart_path(product.id), 
                {:class => "btn btn-default", remote: true}  %>
            </div>
            <div class="btn-group">
              <%= button_to "Edit", edit_product_path(product), {:method => "get", :class => "btn btn-default"} %>
            </div>
            
          </div> 
        </div>
      </div>
    </div>
  <% end %>
</div>
</div>
