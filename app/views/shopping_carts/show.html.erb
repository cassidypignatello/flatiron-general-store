<div class="container">
  <h2>Your Cart</h2>
  <div class="alert alert-dismissable alert-success">
    <p id="notice"><%= notice %></p>
  </div>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Quantity</th>
        <th>Title</th>
        <th>Price</th>
        <th>Total</th>
      </tr>
    </thead>
    <tbody>
      <% @shopping_cart.line_items.each do |line| %>
        <tr>
          <td><%= line.quantity%></td>
          <td><%= line.product.title %></td>
          <td><%= number_to_currency(line.product.price) %></td>
          <td><%= number_to_currency(line.quantity * line.product.price) %></td>
          <td><%= button_to 'Delete Item', line_item_path(:item_id => line.id), method: :delete %></td>
      <% end %>
        </tr>
        <tr>
          <th>Subtotal</th>
          <td></td>
          <td></td>
          <th><%= number_to_currency(@shopping_cart.cart_calculator) %></th>


          <th><%= button_to "Checkout", new_order_path, method: :get %></th>

          <form action="/charge" method="POST">
            <script
              src="https://checkout.stripe.com/checkout.js" class="stripe-button"
              data-key="<%= STRIPE_PUBLIC_KEY %>"
              data-image="/square-image.png"
              data-name="Flatiron General Store"
              data-description="2 widgets ($20.00)"
              data-amount="<%= @shopping_cart.cart_calculator_cents %>">
            </script>
          </form>



        </tr>
    </tbody>
  </table> 
    

    

    <%= link_to 'Back', :back %>
  </div>
</div>
