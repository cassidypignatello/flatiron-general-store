<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="well bs-component">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <fieldset>
    <legend>Sign Up</legend>
    <div class="form-group">
      <div class="field">
        <div><%= f.label :name, :class => "col-lg-8 control-label" %><br />
          <div class="col-lg-12">
          <%= f.text_field :name, :class => "form-control" %>
          </div>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="field">
        <div><%=  f.label :email, :class => "col-lg-8 control-label" %><br />
          <div class="col-lg-12">
          <%= f.email_field :email, :class => "form-control" %>
          </div>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="field">
        <div><%=  f.label :password, :class => "col-lg-8 control-label" %><br />
          <div class="col-lg-12">
          <%= f.password_field :password, :class => "form-control" %>
          </div>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="field">
        <div><%=  f.label :password_confirmation, :class => "col-lg-8 control-label" %><br />
          <div class="col-lg-12">
          <%= f.password_field :password_confirmation, :class => "form-control" %>
          </div>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="field">
        <div class="col-lg-12">
           <%= f.submit "Sign up", :class => "btn btn-primary" %>
        </div>
      </div>
    </div>
    </fieldset>

  </div>  
 </div>
</div>
<% end %>

</div>


 
       
      






