<div class="container col-md-12 col-md-offset-3 " >
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

    <div class="row">
      <div class="field col-md-8">
        <div><%= f.label :name %><br />
          <%= f.text_field :name, {:class => "col-md-8"} %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="field col-md-8">
        <div><%= f.label :email %><br />
        <%= f.email_field :email, {:class => "col-md-8"} %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="field col-md-8">
        <div><%=f.label :password %><br />
        <%= f.password_field :password, {:class => "col-md-8"} %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="field col-md-8">
        <div><%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, {:class => "col-md-8"} %>
        </div>
      </div>
    </div>

   <div><%= f.submit "Sign up" %></div>
<% end %>


</div>
