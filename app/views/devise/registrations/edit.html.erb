<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 well">
      <div class="bs-component">

      <h2>Edit <%= resource_name.to_s.humanize %></h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
   

  <div class="form-group">
        <div><%=  f.label :email, :class => "col-lg-12 control-label" %><br />
          <div class="col-lg-12">
          <%= f.email_field :email, :class => "form-control" %>
          </div>
        </div>
    </div>


  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
        <div><%=  f.label :password, :class => "col-lg-12 control-label" %><i>(leave blank if you don't want to change it)</i><br />
          <div class="col-lg-12">
          <%= f.password_field :password, :class => "form-control" %>
          </div>
        </div>
  </div>

    <div class="form-group">
        <div><%=  f.label :password_confirmation, :class => "col-lg-12 control-label" %><br />
          <div class="col-lg-12">
          <%= f.password_field :password_confirmation, :class => "form-control" %>
          </div>
        </div>
    </div>

      <div class="form-group">
        <div><%= f.label :current_password, :class => "col-lg-12 control-label" %> <i>(we need your current password to confirm your changes)</i><br />
          <div class="col-lg-12">
          <%= f.password_field :current_password, :class => "form-control" %>
          </div>
        </div>
    </div>

    <div class="col-lg-12">
       <%= f.submit "Update", :class => "btn btn-primary sub" %>
    </div>
<% end %>

<div class="col-lg-12">
<h3>Cancel my account</h3>
</div>

<div class="col-lg-12">
<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?"}, method: :delete, :class => "btn btn-primary" %></p>
</div>

<%= link_to "Back", :back %>

      </div>
    </div>
  </div>
</div>




